package bootcamp.basic.methods;

import java.util.Scanner;

public class Ex_6 {

	public static int getPlusOneNumber(int num) //This method returned a new number +1 for each digit.
	
	{		
		int moduloDigit,newDigit,multiply=1,result=0;
		 while(num/10 !=0) {
			 moduloDigit = num%10;
			 newDigit = moduloDigit + 1;
			 if(newDigit==10) {
				 newDigit=0;
			 }
			 result+=(newDigit*multiply);
			 multiply*=10;
		 }
			return num3;
			
	}
